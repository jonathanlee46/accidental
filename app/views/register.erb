
<link rel="stylesheet" href="/css/register.css">

<p id="spacer"></p>
<div class="reg_page animated fadeInDown">
  <div class="regBoard">
    <div class="loginSpacer"></div>
    <p>Please enter your information below:</p>

    <form action="/register" method="post">

        <p><input type="text" name="name" placeholder="Name"></p>
        <p><input type="password" name="password" placeholder="Password"></p>
        <p><input type="text" name="email" placeholder="Email"></p>
        <p><input type="text" name="phone" placeholder="Phone Number"></p>
        <button class="button"><input type="submit" value="Register!"></button>

    </form>

    <button class="button" id="reg_cancel"><input type="submit" value="Cancel"></button>
  </div>
</div>